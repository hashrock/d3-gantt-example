{
  "name": "ganttpad",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "build:js": "browserify ${npm_package_config_src_js} > ${npm_package_config_dist_js}",
    "start": "node ./bin/www",
    "watch:js": "watchify ${npm_package_config_src_js} -o ${npm_package_config_dist_js} -dv",
    "dev": "parallelshell \"npm run watch:js\" \"node-dev ./bin/www\"",
    "postinstall": "npm run build:js"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "director": "^1.2.8",
    "express": "~4.13.1",
    "hjs": "~0.0.6",
    "moment": "^2.10.6",
    "mongoose": "^4.1.10",
    "mongoose-timestamp": "^0.4.0",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0",
    "superagent": "^1.4.0",
    "underscore": "^1.8.3",
    "vue": "^0.12.16"
  },
  "config": {
    "src_js": "public/index.js",
    "dist_js": "public/bundle.js"
  },
  "devDependencies": {
    "browserify": "^11.2.0",
    "node-dev": "^2.7.1",
    "parallelshell": "^2.0.0",
    "watchify": "^3.4.0"
  }
}
